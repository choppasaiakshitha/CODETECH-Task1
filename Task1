x=float(input("Enter num1:"))
y=float(input("Enter num2:"))
print("operationns:,+,-,*,/")
a=input("operation:")
if a== "+":
   print(x+y)
elif a=="-":
   print(x-y)
elif a=="*":
   print(x*y)
elif a == "/":
    if y != 0:
        print(f"The result is: {x / y}")
    else:
        print("Error: Division by zero is not allowed.")
else:
    print("Error: Invalid operation selected.")
